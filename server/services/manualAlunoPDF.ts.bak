  if (fs.existsSync(imagePath)) {
    try {
      const imageStartY = doc.y;
      
      doc.image(imagePath, margin, imageStartY, {
        width: maxImageWidth
      });
      
      doc.fontSize(8)
         .font('Helvetica-Oblique')
         .fillColor(DARK_GRAY)
         .text(caption, margin, doc.y, { 
           width: maxImageWidth, 
           align: 'center' 
         });
         
      doc.moveDown(0.5);
      
    } catch (error) {
      console.log(`[PDF] Aviso: Falha ao carregar imagem ${imagePath}:`, error);
      
      doc.fontSize(9)
         .font('Helvetica-Oblique')
         .fillColor(DARK_GRAY)
         .text(`[Ilustra√ß√£o n√£o dispon√≠vel: ${caption}]`, margin, doc.y, { 
           width: maxImageWidth, 
           align: 'center' 
         });
      doc.moveDown(0.5);
    }
  } else {
    console.log(`[PDF] Aviso: Arquivo de imagem n√£o encontrado: ${imagePath}`);
    
    doc.fontSize(9)
       .font('Helvetica-Oblique')
       .fillColor(DARK_GRAY)
       .text(`[Ilustra√ß√£o n√£o dispon√≠vel: ${caption}]`, margin, doc.y, { 
         width: maxImageWidth, 
         align: 'center' 
       });
    doc.moveDown(0.5);
  }
  
  doc.fontSize(10)
     .font('Helvetica')
     .fillColor(TEXT_COLOR);
}

